<div class="text"><div id="comment"></div>
   <% form_tag(:url => comment_blogs_path,:html => {:id => "message_form"}) do |form|%>
     <div class="form_settings">
       <p><span>Login Name(*)</span><%= form.text_field :login_name,:class => "contact"%></p>
       <p><span>Password(*)</span><%= form.text_field :email,:class => "contact"%></p>
       <%= form.error_messages %>
       <p style="padding-top: 10px"><span>&nbsp;</span><%= form.submit "submit",:class => "submit"%>
     </div>
   <% end%>
</div>
